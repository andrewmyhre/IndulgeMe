<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @ViewBag.SiteName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="clearfix">
<div class="page">
    <div class="page-header">
        <h1 class="masthead">
            <a href="/">@ViewBag.SiteName</a>
        </h1>
        @RenderSection("tagline", required: false)
        <div id="wrapper">
            <ul id="nav">
                <li><a href="/">Confess!</a></li>
                <li>@Html.ActionLink("Indulgences", "List", "Indulgence")</li>
                <li>@Html.ActionLink("Sins", "List", "Sins")</li>
            </ul>
        </div>
    </div>
            @RenderBody()
            <div id="footer">
            </div>
            <div class="push"></div>
        </div>
        <div id="footer-image">
            <div id="god"></div>
        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', '@System.Configuration.ConfigurationManager.AppSettings["GoogleAnalyticsTrackingCode"]', 'auto');
  ga('send', 'pageview');

    </script>
</body>
</html>
