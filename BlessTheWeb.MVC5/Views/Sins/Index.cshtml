@model IEnumerable<BlessTheWeb.Core.Sin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalDonationCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalDonated)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalDonationCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalDonated)
        </td>
    </tr>
}

</table>
